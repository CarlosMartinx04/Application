<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomButton">
        <item name="android:backgroundTint">@color/azul</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CustomOtherButton" parent="CustomButton">
        <item name="android:backgroundTint">@color/gris</item>
    </style>



    <style name="Divider">
        <item name="android:background">@color/grisOscuro</item> //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item> // You can change thickness here.

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>