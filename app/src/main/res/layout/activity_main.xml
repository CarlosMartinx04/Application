<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarteActivity">

    <TextView
        android:id="@+id/textViewTituloRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crea tu cuenta"
        android:textColor="@color/negro"
        android:textSize="30sp"
        android:fontFamily="@font/publicsans_blod"
        app:layout_constraintBottom_toTopOf="@id/textViewDescripcionTituloRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDescripcionTituloRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:fontFamily="@font/publicsans_medium"
        android:text="Comienza a descubrir luagres."
        app:layout_constraintBottom_toTopOf="@id/constraintDatosRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTituloRegistro"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintDatosRegistro"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/constraintBotones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewDescripcionTituloRegistro">

        <LinearLayout
            android:padding="5dp"
            android:id="@+id/layoutNombreRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/layoutCorreoRegistro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/publicsans_medium"
                android:text="Nombre de usuario"/>
            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Elige un nombre de usuario"
                android:fontFamily="@font/publicsans_light"

                android:background="@drawable/rounded_edit_text"
                android:paddingHorizontal="15dp"
                android:paddingVertical="12dp"
                />
        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:id="@+id/layoutCorreoRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/layoutContraseñaRegistro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutNombreRegistro">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/publicsans_medium"
                android:text="Correo electrónico"/>
            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/publicsans_light"
                android:background="@drawable/rounded_edit_text"
                android:paddingHorizontal="15dp"
                android:paddingVertical="12dp"
                android:hint="Escribe tu correo electrónico"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutContraseñaRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutCorreoRegistro">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/publicsans_medium"
                android:text="Contraseña"/>

            <LinearLayout
                android:layout_marginTop="5dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text"
                android:orientation="horizontal">
                <EditText

                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:hint="Contraseña"
                    android:background="@drawable/rounded_edit_text_no_stroke"
                    android:fontFamily="@font/publicsans_light"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="12dp"
                    />

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgOjo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ojo"
                        android:clickable="true" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/constraintBotones"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintDatosRegistro">
        <LinearLayout
            android:id="@+id/buttonCrearCuenta"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="300dp"
            android:layout_height="65dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/constraintIntermediario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Crear Cuenta"
                android:fontFamily="@font/publicsans_medium"
                style="@style/CustomButton"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintIntermediario"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:layout_constraintBottom_toTopOf="@id/buttonRegistrarse"
            app:layout_constraintTop_toBottomOf="@id/buttonCrearCuenta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <View
                android:id="@+id/lineaIzquierda"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/centro"
                style="@style/Divider.Horizontal" />

            <LinearLayout
                android:id="@+id/centro"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/lineaIzquierda"
                app:layout_constraintEnd_toStartOf="@id/lineaDerecha"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gris"
                    android:text="O"/>
            </LinearLayout>
            <View
                android:id="@+id/lineaDerecha"
                android:layout_width="wrap_content"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/centro"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Divider.Horizontal"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/buttonRegistrarse"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="300dp"
            android:layout_height="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintIntermediario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Registrarse"
                android:fontFamily="@font/publicsans_medium"
                style="@style/CustomOtherButton"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>